import random


def guessing_game():
    number = random.randint(0, 100)

    print("УГАДАЙ. 0--100.")

    while True:
        guess = input("ЧИСЛО: ")

        if not guess.isdigit():
            print("ВВЕДИ ЦЕЛОЕ")
            continue

        guess = int(guess)
        if guess < 0 or guess > 100:
            print(" ЧИСЛО ОТ 0 ДО 100.")
            continue
        if guess < number:
            print("МАЛЕНЬКОЕ. ВВЕДИ ЧИСЛО БОЛЬШЕ")
        elif guess > number:
            print("БОЛЬШОЕ. ВВЕДИ ЧИСЛО МЕНЬШЕ")
        else:
            print("ТВОЯ ВЗЯЛА.")
            break

guessing_game()
